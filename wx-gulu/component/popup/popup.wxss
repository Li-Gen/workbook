page{width: 100%;height: 100%}
.wx-popup{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
}
.wx-popup.bg{
  background: rgba(0,0,0,.6);
}
.wx-popup .popup-container{
  width: 90%;
  background: #fff;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding: 45rpx 0 25rpx 0;
  border-radius: 35rpx;
  box-shadow: 1rpx 1rpx 4rpx 1rpx #ccc;
}
.wx-popup .popup-container .wx-popup-main{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-bottom: 1rpx solid #e2e2e2;
}
.wx-popup .popup-container .wx-popup-main .wx-popup-title{
  width: 100%;
  padding-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wx-popup .popup-container .wx-popup-main .wx-popup-con{
  max-width: 560rpx;
  color: #646464;
  font-size: 28rpx;
  line-height: 60rpx;
  padding: 10rpx 25rpx 50rpx 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wx-popup .popup-container .wx-popup-btn{
  width: 100%;
  padding: 25rpx 0 10rpx 0;
  display: flex;
  color: #f10a24;
  justify-content: center;
  align-items: center;
}